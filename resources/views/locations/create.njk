{% extends 'master' %}

{% block content %}

<div class="col-md-5">

    <form action="/locations" method="POST" class="form-horizontal">

        {{ csrfField }}

        <h2 class="form-title">Helyszín felvétele</h2>

        <hr>

        <div class="form-group">
            <label for="name" class="col-sm-3 control-label">Név:</label>
            <div class="col-sm-9">
                {{ form.text('name', null, {class: 'form-control'}) }}
            </div>
        </div>

        <div class="form-group">
            <label for="address" class="col-sm-3 control-label">Cím:</label>
            <div class="col-sm-9">
                {{ form.text('address', null, {class: 'form-control'}) }}
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-3">
                {{ form.submit('Mentés', null, {class: 'btn btn-primary'}) }}
            </div>

            <div class="col-sm-3">
                <a class="btn btn-default" href="/locations">Mégsem</a>
            </div>
        </div>

    </form>

</div>
{% endblock %}